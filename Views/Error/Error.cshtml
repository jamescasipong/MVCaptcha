@using MVCaptcha.Models.ViewModels
@model ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<div class="error-wrapper">
    <div class="error-container">
        <div class="error-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        <h1 class="error-status">Error @Model.StatusCode</h1>
        <h2 class="error-message">@Model.Message</h2>

        @if (Model.ShowRequestId)
        {
            <div class="error-details">
                <strong>Request ID:</strong>
                <code class="request-id">@Model.RequestId</code>
            </div>
        }

        <a href="/" class="btn-home">
            <i class="fas fa-arrow-left"></i> Return to Home
        </a>
    </div>
</div>

<link rel="stylesheet" href="~/css/error.css" asp-append-version="true" />