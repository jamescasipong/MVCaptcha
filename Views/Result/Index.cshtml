@using MVCaptcha.Models.ViewModels
@model ResultViewModel

@section Styles {
    <link rel="stylesheet" href="~/css/result.css" />
}

<div class="result-container">
    <h1>Your Results</h1>

    <div class="score-display">
        @Model.Score/@Model.Total
    </div>

    <div class="stats">
        <div class="stat-item">
            <strong>Difficulty:</strong> @Model.Difficulty
        </div>
        <div class="stat-item">
            <strong>Time Taken:</strong> @Model.Duration.ToString(@"m\:ss")
        </div>
    </div>

    <a href="@Url.Action("Index", "Welcome")" class="btn btn-primary">
        <i class="fas fa-redo"></i> Try Again
    </a>
</div>